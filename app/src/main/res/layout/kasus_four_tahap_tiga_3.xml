<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slider3"
    tools:context=".ui.kasus.empat.FourTahapTiga_3"
    tools:ignore="ExtraText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="32dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/jud_kasus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_pertanyaan"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:text="@string/tahap4pbl"
                    android:textColor="@color/mi_icon_color_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/jud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_pertanyaan"
                    android:padding="8dp"
                    android:textColor="@color/mi_icon_color_dark"
                    android:textSize="18sp" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/tabel_buku"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitCenter"
                android:padding="2dp"
                android:background="@drawable/bg_white"
                android:layout_marginTop="16dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/penyelesaian_toko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:background="@drawable/bg_white"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorDark"
                tools:ignore="MissingConstraints" />
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="80dp">


                <RadioButton
                    android:id="@+id/pilihanA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rb_a_selector"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:lineSpacingMultiplier="1.5"
                    android:onClick="onRBClicked"
                    android:padding="16dp"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/image_pilihanA"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bg_white"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    tools:ignore="ContentDescription" />

                <RadioButton
                    android:id="@+id/pilihanB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    android:background="@drawable/rb_b_selector"
                    android:button="@android:color/transparent"
                    android:onClick="onRBClicked"
                    android:checked="false"
                    android:padding="16dp"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/image_pilihanB"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bg_white"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp"
                    tools:ignore="ContentDescription" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        tools:ignore="RtlSymmetry">
        <ImageButton
            android:id="@+id/button_toko3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_next"
            android:elevation="4dp"
            android:onClick="next"
            android:src="@drawable/next"
            android:textColor="@color/color_darkprime"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>