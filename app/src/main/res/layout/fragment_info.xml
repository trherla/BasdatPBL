                            android:layout_weight="1"
                            android:gravity="start" />
                        <TextView
                            android:text="@string/versi_os_os"
                            android:layout_weight="1"
                            android:gravity="start" />

                    </TableRow>
                    <TableRow
                        android:padding="3dip">
                        <TextView
                            android:text="@string/ram"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_weight="1"
                            android:gravity="start" />
                        <TextView
                            android:text="@string/ram_1gb"
                            android:layout_weight="1"
                            android:gravity="start" />

                    </TableRow>
                    <TableRow
                        android:padding="3dip">
