<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slider3"
    tools:context=".ui.kasus.dua.TwoTahapSatu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="32dp">
            <TextView
                android:id="@+id/jud_kasus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pertanyaan"
                android:padding="12dp"
                android:textSize="16sp"
                android:text="@string/tahap2pbl"
                android:textColor="@color/mi_icon_color_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/pertayaan_kasus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_pertanyaan"
                android:padding="20dp"
                android:textColor="@color/mi_icon_color_dark"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jud_kasus"
                tools:ignore="MissingConstraints" />


            <CheckBox
                android:id="@+id/cb_satu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.25"
                android:background="@drawable/bg_white" />

            <CheckBox
                android:id="@+id/cb_dua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.25"
                android:background="@drawable/bg_white" />

            <CheckBox
                android:id="@+id/cb_tiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.25"
                android:background="@drawable/bg_white" />

            <CheckBox
                android:id="@+id/cb_empat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.25"
                android:background="@drawable/bg_white" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        tools:ignore="RtlSymmetry">
        <ImageButton
            android:id="@+id/button_rs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_next"
            android:elevation="4dp"
            android:onClick="next"
            android:src="@drawable/next"
            android:textColor="@color/color_darkprime"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>