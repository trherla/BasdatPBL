<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.kuis.kuis_hirarki.KuisHirarki">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/jud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Quiz Hirarki Basis Data"
                    android:textSize="16sp"
                    android:background="@drawable/bg_pertanyaan"
                    android:textColor="@color/mi_icon_color_dark"
                    />
                <TextView
                    android:id="@+id/pertanyaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jud"
                    android:layout_marginTop="16dp"
                    android:paddingTop="16dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="40dp"
                    android:textColor="@color/mi_icon_color_dark"
                    android:background="@drawable/bg_pertanyaan"
                    android:text="Pertanyaan"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_below="@+id/pertanyaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_below="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <RadioButton
                        android:id="@+id/pilihanA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rb_a_selector"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:onClick="onRBClicked"
                        android:padding="16dp"
                        android:text="Pilihan A" />
                    <RadioButton
                        android:id="@+id/pilihanB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="16dp"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:background="@drawable/rb_b_selector"
                        android:onClick="onRBClicked"
                        android:text="Pilihan B"/>
                    <RadioButton
                        android:id="@+id/pilihanC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="16dp"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:background="@drawable/rb_c_selector"
                        android:onClick="onRBClicked"
                        android:text="Pilihan C"/>
                    <RadioButton
                        android:id="@+id/pilihanD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="16dp"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:background="@drawable/rb_d_selector"
                        android:onClick="onRBClicked"
                        android:text="Pilihan D"/>
                </RadioGroup>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="32dp"
                        android:src="@drawable/next"
                        android:textColor="@color/color_darkprime"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:onClick="next"
                        android:background="@drawable/bg_next"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>